<form class="actor sheet crb-style creature" autocomplete="off">
    <div class="creature-stats">
        <section class="creature-HP">
            <span class="TrihnsLabel">{{localize "SRLabels.Trihns"}} <a class="regen-hp" title="{{localize "SR.RegenTitle"}}"><i class="fa-solid fa-bed"></i></a></span>
                 <div class="hp-esprit">
                    <span class="esprit-label"><h3 class="sidebar_label">{{localize "SRLabels.Esprit"}}</h3></span>
                    <span class="esprit-base"><h3 class="details-label">{{localize "SRLabels.HPActuel"}}</h3></span>
                    <div class="data-value hpActuel-esprit" title="Esprit Actuel">
                        <input class="select-input" name="system.attributes.hpEsprit.value" id="{{option.id}}-pc-hp-esprit-value" type="number" value="{{system.attributes.hpEsprit.value}}" >
                    </div>
                    <div class="esprit-max"><h3 class="details-label">{{localize "SRLabels.HPMax"}}</h3></div>
                    <div class="esprit-max">
                        <input class="select-input" name="system.attributes.hpEsprit.max" id="{{option.id}}-pc-hp-esprit-max" type="number" value="{{system.attributes.hpEsprit.max}}">
                    </div>
                </div>
                <div class="hp-ame">
                    <span class="ame-label"><h3 class="sidebar_label">{{localize "SRLabels.Ame"}}</h3></span>
                    <span class="esprit-base"><h3 class="details-label">{{localize "SRLabels.HPActuel"}}</h3></span>
                    <div class="data-value hpActuel-ame" title="Âme Actuel">
                        <input class="select-input" name="system.attributes.hpAme.value" id="{{option.id}}-pc-hp-ame-value" type="number" value="{{system.attributes.hpAme.value}}" >
                    </div>
                    <span class="ame-corps"><h3 class="details-label">{{localize "SRLabels.HPMax"}}</h3></span>
                    <div class="ame-max">
                        <input class="select-input" name="system.attributes.hpAme.max" id="{{option.id}}-pc-hp-ame-max" type="number" value="{{system.attributes.hpAme.max}}">
                    </div>
                </div>
                <div class="hp-corps">
                    <span class="corps-label"><h3 class="sidebar_label">{{localize "SRLabels.Corps"}}</h3></span>
                    <span class="corps-base"><h3 class="details-label">{{localize "SRLabels.HPActuel"}}</h3></span>
                    <div class="data-value hpActuel-corps" title="Corps Actuel">
                        <input class="select-input" name="system.attributes.hpCorps.value" id="{{option.id}}-pc-hp-corps-value" type="number" value="{{system.attributes.hpCorps.value}}">
                    </div>
                    <span class="corps-max"><h3 class="details-label">{{localize "SRLabels.HPMax"}}</h3></span>
                    <div class="corps-max">
                        <input class="select-input" name="system.attributes.hpCorps.max" id="{{option.id}}-pc-hp-corps-max" type="number" value="{{system.attributes.hpCorps.max}}">
                    </div>
                </div>
        </section>
        {{> "systems/shaanrenaissance/templates/actors/Creature/partials/armor.hbs"}}
        <hr/>
        <section class="creature-cercle">
        <span class="DomainsLabel">{{localize "SRLabels.DomainsTitle"}}</span>
        {{> "systems/shaanrenaissance/templates/actors/Creature/partials/cercle.hbs"}}
        </section>
        <hr/>
        <section class="creature-spés">
            <span class="SpecialisationsLabel">{{localize "SRLabels.SpecialisationsTitle"}}</span>
            {{> "systems/shaanrenaissance/templates/actors/Creature/partials/specialisations.hbs"}}
        </section>
    </div>
    <div class="creature-infos">
        <div class="creature-general">
            {{> "systems/shaanrenaissance/templates/actors/Creature/partials/general.hbs"}}
        </div>
        <div class="creature-dice">
            <div class="roll-data initiative" data-item-id="initiative" style="display: flex; flex-direction: row; color: var(--primary)">
                <a class="roll-initiative">
                <h2 style="border: none;">{{localize "SRLabels.Initiative"}}</h2>    
                </a>
                <h4 class="initiative-select" style="margin-left:5px;">
                    <select name="system.attributes.initiative.statistic"> 
                        {{selectOptions config.SRdomains selected=system.attributes.intiative.statistic}}
                    </select>
                </h4>
                <input class="initiative-score" name="system.attributes.initiative.value" value="{{system.attributes.initiative.value}}" style="visibility:hidden"/>
            </div>
            <div class="roll-data domain-test" data-item-id="domainTest" style="display: flex; flex-direction: row;">
                <a class="roll-icon">
                    <img src="systems/shaanrenaissance/assets/sheet/des_domaine.png">
                </a>
            <h3>{{localize "SRLabels.DomainTest"}}</h3>
            </div>
            <div class="roll-data necrose-test" data-item-id="necroseTest" style="display: flex; flex-direction: row;">
                <a class="roll-icon">
                {{#ifeq Race.name "Humain"}}
                <img src="systems/shaanrenaissance/assets/sheet/des_necroseH.png">
                {{/ifeq}}   
                {{#ifnoteq Race.name "Humain"}}
                <img src="systems/shaanrenaissance/assets/sheet/des_necrose.png">
                {{/ifnoteq}}   
                </a>
                <h3>{{localize "SRLabels.NecroseTest"}}</h3>
            </div>
        </div>
        <div class="npc-reserve">
            {{~> "systems/shaanrenaissance/templates/actors/PNJ/partials/NPC-reserve.hbs"}}
        </div>
        <div class="creature-bio">
            {{~> "systems/shaanrenaissance/templates/actors/Creature/partials/bio.hbs"}}
        </div>
        <div class="pouvoir-compendium">
         <button type="button" style="margin-top: 5px;" class="open-compendium" data-compendium="shaanrenaissance.pouvoirs"><i class="fa-solid fa-list"></i> {{localize "SR.PouvoirCompendium"}}</button>
        </div>
        <div class="creature-powers">
            {{> "systems/shaanrenaissance/templates/actors/partials/pouvoirs-categories.hbs"}}
        </div>


        <div class="creature-acquis">
            {{> "systems/shaanrenaissance/templates/actors/partials/acquis-categories.hbs"}}
        </div>
        
    </div>
</form>