<header class="char-header">
  <section class="char-details">
    <h1 class="char-name">
      <input name="name" type="text" value="{{actor.name}}" placeholder="Nom du Personnage" spellcheck="false" />
    </h1>
  </section>
  <section class="char-exp">
    <div class="exp">
      <label>{{localize "SRLabels.Experience"}}</label>
      <div class="exp-input" style="display:flex; flex-direction: row;">
        <input
          name="system.details.xp.value"
          type="number"
          value="{{system.details.xp.value}}"
          data-dtype="Number"
          placeholder="{{system.details.xp.value}}"
          size="4"
        />
        <span class="max"> / </span>
        <input
          name="system.details.xpMax.value"
          type="number"
          value="{{system.details.xpMax.value}}"
          data-dtype="Number"
          placeholder="{{system.details.xpMax.value}}"
          size="4"
        />
      </div>
    </div>
    <div class="prestige">
      <label class="prestige-input prestige-label" for="{{options.id}}-pc-prestige">{{localize "SR.prestige"}}</label>
      <div class="prestige-input">
        <input
          type="number"
          class="prestige-input"
          title="{{localize 'SR.prestigeTitle'}}"
          id="{{options.id}}-pc-money"
          name="system.attributes.prestige"
          value="{{system.attributes.prestige}}"
        />
        <span class="max"> / </span>
        <input name="system.attributes.préstigeMax" type="number" value="{{system.attributes.préstigeMax}}" data-dtype="Number" />
      </div>
    </div>
  </section>
</header>