<form class="actor sheet crb-style character" autocomplete="off">
    <aside>
        <div class="logo">
        <img class="logo-img" src="systems/shaanrenaissance/assets/shaan-foundry-logo.png" height="100px" alt="Shaan Renaissance" srcset=""/>
        </div>
        <div class="sidebar" data-group="dashboard" data-tab="sidebar">
            {{!-- Trihns --}}
            {{> "systems/shaanrenaissance/templates/actors/Personnage/sidebar/health.hbs"}}

            <!-- Armure  -->
            {{> "systems/shaanrenaissance/templates/actors/Personnage/sidebar/armor.hbs"}}

            <!-- Initiative -->
            {{> "systems/shaanrenaissance/templates/actors/Personnage/sidebar/initiative.hbs"}}

            <!-- Jets -->
            {{> "systems/shaanrenaissance/templates/actors/Personnage/sidebar/jets.hbs"}}
            
            <!-- Reserve -->
            {{> "systems/shaanrenaissance/templates/actors/Personnage/sidebar/reserve.hbs"}}
        </div>
    </aside>

    <!-- HEADER -->
    {{> "systems/shaanrenaissance/templates/actors/Personnage/partials/header.hbs"}}

    {{!-- SHEET NAVIGATION --}}
 <nav class="sheet-navigation" data-group="primary">
        <span class="navigation-title">{{localize "SRTabs.CharacterLabel"}}</span>
        <a class="item {{#unless tabVisibility.character}} hidden{{/unless}}" data-tab="character" title="{{localize "SRTabs.CharacterLabel"}}">
            <img src="systems/shaanrenaissance/assets/icons/navbar/icon_general_vert.webp" title="{{localize "SRTabs.CharacterLabel"}}">
        </a>

        <a class="item {{#unless tabVisibility.powers}} hidden{{/unless}}" data-tab="powers" title="{{localize "SRTabs.PowersLabel"}}">
            <img src="systems/shaanrenaissance/assets/icons/navbar/icon_pouvoir_vert.webp" title="{{localize "SRTabs.PowersLabel"}}">        
        </a>

        <a class="item {{#unless tabVisibility.magic}} hidden{{/unless}}" data-tab="magic" title="{{localize "SRTabs.MagicLabel"}}">
            <img src="systems/shaanrenaissance/assets/icons/navbar/icon_magie_vert.webp" title="{{localize "SRTabs.MagicLabel"}}">
        </a>

        <a class="item {{#unless tabVisibility.acquis}} hidden{{/unless}}" data-tab="acquis" title="{{localize "SRTabs.AcquisLabel"}}">
            <img src="systems/shaanrenaissance/assets/icons/navbar/icon_acquis_vert.webp" title="{{localize "SRTabs.AcquisLabel"}}">
        </a>

        {{#ifeq system.attributes.isMorph true}}
        <a class="item" data-tab="morphe" title="{{localize "SRTabs.MorpheLabel"}}">
            <img src="systems/shaanrenaissance/assets/icons/navbar/icon_morphe.webp" title="{{localize "SRTabs.MorpheLabel"}}">
        </a>
        {{/ifeq}}

        <a class="item {{#unless tabVisibility.biography}} hidden{{/unless}}" data-tab="biography" title="{{localize "SRTabs.BiographyLabel"}}">
            <img src="systems/shaanrenaissance/assets/icons/navbar/icon_biographie_vert.webp" title="{{localize "SRTabs.BiographyLabel"}}">
        </a>

        <a class="manage-tabs" data-action="manage-tabs" title="{{localize "SRTabs.ManageTabsLabel"}}">
            <i class="fas fa-fw fa-ellipsis-v" title="{{localize "SRTabs.ManageTabsLabel"}}"></i>
        </a>
</nav>

    <section class="sheet-body">
        <section class="sheet-content">
            {{!-- Character --}}
            {{~> "systems/shaanrenaissance/templates/actors/Personnage/tabs/general.hbs"}}
            {{!-- Powers --}}
            {{~> "systems/shaanrenaissance/templates/actors/Personnage/tabs/powers.hbs"}}
            {{!-- Magic --}}
            {{~> "systems/shaanrenaissance/templates/actors/partials/magic.hbs"}}
            {{!-- Acquis --}}
            {{~> "systems/shaanrenaissance/templates/actors/partials/acquis.hbs"}}
            {{!-- Morphe --}}
            {{~> "systems/shaanrenaissance/templates/actors/Personnage/tabs/morphe.hbs"}}
            {{!-- Biography --}}
            {{~> "systems/shaanrenaissance/templates/actors/Personnage/tabs/biography.hbs"}}
            
        </section>
    </section>
</form>