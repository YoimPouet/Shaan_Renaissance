<div class="tab character" data-group="primary" data-tab="character">
    <section class="character-details">
        <div class="frame-container">
            <div class="frame image-container">
                <img class="player-image" alt="{{actor.name}}" src="{{actor.img}}" title="{{actor.name}}" {{#if editable}}data-edit="img"{{/if}} />
                <a class="hover-icon" data-action="show-image"><i class="fa-solid fa-image fa-fw"></i></a>
            </div>
        </div>
        <div class="vide">
            <div class="isIndarDiv">
            <input type="checkbox" class="isIndar" id="isIndar" name="system.attributes.isIndar" {{checked system.attributes.isIndar}}>
            <label for="isIndar">Indar</label>    
            </div>       
            <div class="isMorphDiv">
            <input type="checkbox" class="isMorph" id="isMorph" name="system.attributes.isMorph" {{checked system.attributes.isMorph}}>
            <label for="isMorph">Morphe</label>
            </div>
        </div>
        <div class="pc pc_shaani">
            <label class="details-input details-label" for="{{options.id}}-pc-shaani">{{localize "SR.Shaani"}}</label>
            <input type="text" class="details-input" title="{{localize "SR.ShaaniTitle"}}" id="{{options.id}}-pc-shaani" name="system.general.shaani.value" value="{{system.general.shaani.value}}"/>
        </div>
        <div class="detail-sheet">
            {{!-- race --}}
            <div class="pc pc_race item" data-item-id="{{Race._id}}" style="display: flex; flex-direction:row">
                <div class="input {{#ifnoteq system.attributes.isIndar true}}notIndar{{/ifnoteq}}{{#ifeq system.attributes.isIndar true}} indar {{/ifeq}}">
                    <label class="details-label">{{localize "Item.Race"}} {{#ifeq system.attributes.isIndar true}}{{localize "SRLabels.primaire"}}{{/ifeq}}</label>
                    <h3>
                        <span class="value">{{Race.name}}</span>
                        {{#if @root.editable}}
                        {{#if Race}}
                            <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        {{else}}
                            <a class="open-compendium" data-compendium="shaanrenaissance.races"><i class="fas fa-fw fa-circle-plus"></i></a>
                        {{/if}}
                        {{/if}}
                    </h3>
                </div>
                {{#ifeq system.attributes.isIndar true}}
                <div class="input {{#ifeq system.attributes.isIndar true}} indar {{/ifeq}}" data-item-id="{{RaceSecondaire._id}}">
                    <label class="details-label">{{localize "Item.Race"}} {{#ifeq system.attributes.isIndar true}}{{localize "SRLabels.secondaire"}}{{/ifeq}}</label>
                    <h3>
                        <span class="value">{{RaceSecondaire.name}}</span>
                        {{#if @root.editable}}
                        {{#if RaceSecondaire}}
                            <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        {{else}}
                            <a class="open-compendium" data-compendium="shaanrenaissance.races"><i class="fas fa-fw fa-circle-plus"></i></a>
                        {{/if}}
                        {{/if}}
                    </h3>
                </div>
                {{/ifeq}}
            </div>
            {{!-- peuple --}}
            <div class="pc pc_people item" data-item-id="{{Peuple._id}}">
                <div class="input">
                    <label class="details-label">{{localize "Item.People"}}</label>
                    <h3>
                        <span class="value">{{Peuple.name}}</span>
                        {{#if @root.editable}}
                        {{#if Peuple}}
                            <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        {{else}}
                            <a class="open-compendium" data-compendium="shaanrenaissance.peuples"><i class="fas fa-fw fa-circle-plus"></i></a>
                        {{/if}}
                        {{/if}}                        
                    </h3>
                </div>            
            </div>
            {{!-- caste --}}
            <div class="pc pc_caste item" data-item-id="{{Caste._id}}">
                <div class="input">
                    <label class="details-label">{{localize "Item.Caste"}}</label>
                    <h3>
                        <span class="value">{{Caste.name}}</span>
                        {{#if @root.editable}}
                        {{#if Caste}}
                            <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        {{else}}
                            <a class="open-compendium" data-compendium="shaanrenaissance.castes"><i class="fas fa-fw fa-circle-plus"></i></a>
                        {{/if}}
                        {{/if}}
                    </h3>
                </div>             
            </div>
            {{!-- m√©tier --}}
            <div class="pc pc_job item" data-item-id="{{Metier._id}}">
                <div class="input">
                    <label class="details-label">{{localize "Item.Job"}}</label>
                    <h3>
                        <span class="value">{{Metier.name}}</span>
                        {{#if @root.editable}}
                        {{#if Metier}}
                            <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        {{else}}
                            <a class="open-compendium" data-compendium="shaanrenaissance.metiers"><i class="fas fa-fw fa-circle-plus"></i></a>
                        {{/if}}
                        {{/if}}
                    </h3>
                </div>             
            </div>
        </div>
    </section>
    <hr />
    <section class="character-background">
        {{~> "systems/shaanrenaissance/templates/actors/Personnage/partials/background.hbs"}}
    </section>
    <hr />
    
    <section class="character-domains">
        <span class="DomainsLabel">{{localize "SRLabels.DomainsTitle"}}</span>
        {{~> "systems/shaanrenaissance/templates/actors/partials/domaincircle.hbs"}}
    </section>
    <hr />
    <section class="character-specialisations">
        <span class="SpecialisationsLabel">{{localize "SRLabels.SpecialisationsTitle"}}</span>
        {{~> "systems/shaanrenaissance/templates/actors/Personnage/partials/specialisations.hbs"}}
    </section>
</div>

