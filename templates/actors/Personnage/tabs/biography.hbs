<div class="tab biography" data-group="primary" data-tab="biography">
    <div class="biography-top">
        {{#if user.isGM}}
        <div class="biographyCategory gm">
            <label class="gm-label" for="{{actor._id}}-pc-gm">{{localize "SRLabels.GMnotes"}}</label>
            {{editor enrichedGMnotes target="system.biography.campagne.gm" button=true owner=owner editable=editable
            engine="prosemirror"}}
        </div>
        {{/if}}
        <div class="biographyCategory apparence">
            <label class="apparence-label" for="{{actor._id}}-pc-apparence">{{localize "SRLabels.apparence"}}</label>
            {{editor enrichedApparence target="system.biography.apparence" button=true owner=owner editable=editable
            engine="prosemirror"}}
        </div>
        <div class="biography-histoire">
            <label class="histoire-label" for="{{actor._id}}-pc-histoire">{{localize "SRLabels.histoire"}}</label>
            {{editor enrichedBiography target="system.biography.histoire" button=true owner=owner editable=editable
            engine="prosemirror"}}
        </div>
        <div class="biography-langues">
            <label class="langues-label" for="{{actor._id}}-pc-langues">{{localize "SRLabels.langues"}}</label>
            <input class="langues-input" id="{{actor._id}}-pc-langues" name="system.biography.langues" value="{{system.biography.langues}}"/>
        </div>
    </div>
    <hr />
    <div class="biographyCategory personnalité">
        <header>
            <h2>{{localize "SRLabels.personnalité"}}</h2>
        </header>
        <div class="biography-temper">
            <label class="temper-label" for="{{actor._id}}-pc-temper">{{localize "SRLabels.temper"}}</label>
            <input class="temper-input" id="{{actor._id}}-pc-temper" name="system.biography.personnalité.temper" value="{{system.biography.personnalité.temper}}"/>
        </div>
        <div class="biography-element1">
            <label class="element1-label" for="{{actor._id}}-pc-element1">{{localize "SRLabels.element1"}}</label>
            <input class="element1-input" id="{{actor._id}}-pc-element1" name="system.biography.personnalité.element1" value="{{system.biography.personnalité.element1}}"/>
        </div>
        <div class="biography-element2">
            <label class="element2-label" for="{{actor._id}}-pc-element2">{{localize "SRLabels.element2"}}</label>
            <input class="element2-input" id="{{actor._id}}-pc-element2" name="system.biography.personnalité.element2" value="{{system.biography.personnalité.element2}}"/>
        </div>
        <div class="biography-culte">
            <label class="culte-label" for="{{actor._id}}-pc-culte">{{localize "SRLabels.culte"}}</label>
            <input class="culte-input" id="{{actor._id}}-pc-culte" name="system.biography.personnalité.culte" value="{{system.biography.personnalité.culte}}"/>
        </div>
    </div>
    <hr />
    {{~> "systems/shaanrenaissance/templates/actors/partials/campagne.hbs"}}
</div>