<div class="tab powers" data-group="primary" data-tab="powers">
    <ol class="pouvoirTrihn-list directory-list">
        <li class="item item-container pouvoirTrihn Esprit">
            <div class="trihn-header">
                <h3 class="item-name">
                    {{localize "SRLabels.pouvoirsEsprit"}}
                </h3>
                {{#ifeq editable true}}
                    <div class="item-controls">
                        <a class="item-control power-create"><i class="fas fa-fw fa-plus"></i></a>
                    </div>
                {{/ifeq}}
            </div>
            <ol class="liste-pouvoir liste-pouvoirEsprit">
                {{#each pouvoirEsprit as |pouvoir id|}}
                <li draggable="true">
                <div class="pouvoir-header">
                        <img src="{{pouvoir.img}}" data-edit="img">
                    <span class="pouvoir-name">
                        {{pouvoir.name}}
                    </span>
                    <div class="item-controls">
                        <a class="item-control power-edit"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-control power-delete"><i class="fas fa-fw fa-trash"></i></a>
                    </div>
                </div>
                <div class="résumé">
                    <i>{{localize "SRLabels.résumé"}} : {{pouvoir.system.résumé.value}}</i>
                </div>
                </li>
                {{/each}}
            </ol>
        </li>
        <li class="item item-container pouvoirTrihn Ame">
            <div class="trihn-header">
                <h3 class="item-name">
                    {{localize "SRLabels.pouvoirsAme"}}
                </h3>
                {{#ifeq editable true}}
                    <div class="item-controls">
                        <a class="item-control"><i class="fas fa-fw fa-plus"></i></a>
                    </div>
                {{/ifeq}}
            </div>
            <ol class="liste-pouvoirAme">
                {{#each pouvoirAme as |pouvoir id|}}
                <li draggable="true">
                {{pouvoir.name}}
                </li>
                {{/each}}
            </ol>
        </li>
        <li class="item item-container pouvoirTrihn Corps">
            <div class="trihn-header">
                <h3 class="item-name">
                    {{localize "SRLabels.pouvoirsCorps"}}
                </h3>
                {{#ifeq editable true}}
                    <div class="item-controls">
                        <a class="item-control"><i class="fas fa-fw fa-plus"></i></a>
                    </div>
                {{/ifeq}}
            </div>
            <ol class="liste-pouvoirCorps">
                {{#each pouvoirCorps as |pouvoir id|}}
                <li draggable="true">
                {{pouvoir.name}}
                </li>
                {{/each}}
            </ol>
        </li>
        <li class="item item-container pouvoirTrihn Nécrose">
            <div class="trihn-header">
                <h3 class="item-name">
                    {{localize "SRLabels.pouvoirsNecrose"}}
                </h3>
                {{#ifeq editable true}}
                    <div class="item-controls">
                        <a class="item-control"><i class="fas fa-fw fa-plus"></i></a>
                    </div>
                {{/ifeq}}
            </div>
            
            <ol class="liste-pouvoirNecrose">
                {{#each pouvoirNecrose as |pouvoir id|}}
                <li draggable="true">
                {{pouvoir.name}}
                </li>
                {{/each}}
            </ol>
        </li>







    </ol>
</div>