<div class="tab acquis" data-group="primary" data-tab="acquis">
    <ol class="itemCategory-list directory-list">
        {{#each items.Category as |Category|}}
        <li class="item item-container itemCategory {{Category}}">
            <div class="acquis-header">
                <h3 class="item-name">
                    {{@key}}
                </h3>
                {{#ifeq @root.editable true}}
                    <div class="item-controls">
                        <a class="item-control item-create"><i class="fas fa-fw fa-plus" id="Esprit-add"></i></a>
                    </div>
                {{/ifeq}}
            </div>
            <ol class="item-list liste-items liste-item{{Category}}">
                {{#each Category as |acquis|}}
                    <li class="item acquis" draggable="true" data-item-id="{{acquis._id}}">
                <div class="acquis-header">
                        <img src="{{acquis.img}}" data-edit="img">
                    <span class="acquis-name">
                        {{acquis.name}}
                    </span>
                    <div class="item-controls">
                        <a class="item-control power-edit"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-control power-delete"><i class="fas fa-fw fa-trash"></i></a>
                    </div>
                </div>
                <div class="résumé">
                    
                </div>
                </li>
                {{/each}}
            </ol>
        </li>
        {{/each}}
    </ol>
</div>