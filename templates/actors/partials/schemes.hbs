<section class="schemes-elementaires">
    <h3>SCHÈMES ÉLÉMENTAIRES</h3>
    <div class="schemes-container">
    {{#each flags.shaanRenaissance.schemes.element as |element|}}
    <input class="scheme" type="checkbox" id="{{@key}}" name="flags.shaanRenaissance.schemes.element.{{@key}}.learned" {{checked element.learned}} {{#ifeq element.learned false}}{{#ifeq @root.flags.shaanRenaissance.schemes.learnedCountDomaine 0}}disabled{{/ifeq}}{{/ifeq}}/>
    <label id="scheme_label" for="{{@key}}" class="{{#if element.learned}}checked{{/if}}" title="{{localize @key}}" ><img src="systems/shaanrenaissance/icons/schemes/scheme-{{@key}}.png" /></label>
    {{/each}}
    </div>
</section>
<section class="schemes-actions">
    <h3>SCHÈMES D'ACTIONS</h3>
    <div class="schemes-container">
    {{#each flags.shaanRenaissance.schemes.action as |action|}}
