    <label id="scheme_label" for="{{@key}}" class="{{#if action.learned}}checked{{/if}}" title="{{localize @key}}"><img src="systems/shaanrenaissance/icons/schemes/scheme-{{@key}}.png" /></label>
    {{/each}}
    </div>
</section>
