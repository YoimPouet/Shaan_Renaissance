{{!-- Image --}}
<div class="npc_frame-container">
    <div class="frame image-container">
        <img class="player-image" alt="{{actor.name}}" src="{{actor.img}}" title="{{actor.name}}" data-edit="img" />
    </div>
</div>
{{!-- Nom --}}
<section class="npc_char-details">
    <h1 class="char-name">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Nom du Personnage" spellcheck="false" />
    </h1>
</section>
{{!-- race --}}
<div class="npc npc_race item">
    <label class="details-label" for="{{options.id}}-pc-race">{{localize "ITEM.TypeRace"}}</label>
    <input type="text" class="details-input" title="{{localize "SR.RaceTitle"}}" id="{{options.id}}-pc-race" name="system.general.race.value" value="{{data.general.race.value}}"/> 
</div>
