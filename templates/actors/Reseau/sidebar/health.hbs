<div class="sidebar_title">
  <h2><span>{{localize "SRLabels.Trihns"}}</span><a class="regen-hp" title="{{localize 'SR.RegenTitle'}}"><i
        class="fa-solid fa-bed"
      ></i></a></h2>
</div>
<div class="HP">
  <div class="hp-big">
    <span class="esprit-label"><h3 class="sidebar_label">{{localize "SRLabels.Esprit"}}</h3></span>
    <div class="data-value hpActuel-esprit" title="Esprit Actuel">
      <input
        class="select-input"
        class="select-input"
        name="system.attributes.hpEsprit.value"
        id="{{option.id}}-pc-hp-esprit-value"
        type="number"
        value="{{system.attributes.hpEsprit.value}}"
        max="{{system.attributes.hpEsprit.max}}"
      />
    </div>
    <div class="data-value hpMax-esprit" title="Esprit Max">
      <span>/</span><input
        class="select-input"
        name="system.attributes.hpEsprit.max"
        id="{{option.id}}-pc-hp-esprit-max"
        type="number"
        value="{{system.attributes.hpEsprit.max}}"
      />
    </div>
    <span class="ame-label"><h3 class="sidebar_label">{{localize "SRLabels.Ame"}}</h3></span>
    <div class="data-value hpActuel-ame" title="Âme Actuel">
      <input
        class="select-input"
        class="select-input"
        name="system.attributes.hpAme.value"
        id="{{option.id}}-pc-hp-ame-value"
        type="number"
        value="{{system.attributes.hpAme.value}}"
        max="{{system.attributes.hpAme.max}}"
      />
    </div>
    <div class="data-value hpMax-ame" title="Âme Max">
      <span>/</span><input
        class="select-input"
        name="system.attributes.hpAme.max"
        id="{{option.id}}-pc-hp-ame-max"
        type="number"
        value="{{system.attributes.hpAme.max}}"
      />
    </div>

    <span class="corps-label"><h3 class="sidebar_label">{{localize "SRLabels.Corps"}}</h3></span>
    <div class="data-value hpActuel-corps" title="Corps Actuel">
      <input
        class="select-input"
        class="select-input"
        name="system.attributes.hpCorps.value"
        id="{{option.id}}-pc-hp-corps-value"
        type="number"
        value="{{system.attributes.hpCorps.value}}"
        max="{{system.attributes.hpCorps.max}}"
      />
    </div>
    <div class="data-value hpMax-corps" title="Corps Max">
      <span>/</span><input
        class="select-input"
        name="system.attributes.hpCorps.max"
        id="{{option.id}}-pc-hp-corps-max"
        type="number"
        value="{{system.attributes.hpCorps.max}}"
        *
      />
    </div>
  </div>
</div>