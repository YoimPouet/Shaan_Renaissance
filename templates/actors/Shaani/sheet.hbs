        <a class="item" data-tab="details" title="{{localize "SRTabs.DetailsLabel"}}">
            <i class="fas fa-book-reader" title="{{localize "SRTabs.DetailsLabel"}}"></i>
        </a>

        <a class="manage-tabs" data-action="manage-tabs" title="{{localize "SRTabs.ManageTabsLabel"}}">
