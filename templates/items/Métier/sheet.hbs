<form class="item sheet crb-style metier" autocomplete="off">
    {{!-- HEADER --}}
    <header class="sheet-header">
        <h2 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Nom du item" spellcheck="false" />
        </h2>
        <span class="item-source">
            <input name="system.source.value" type="text" value="{{system.source.value}}" placeholder="Source" spellcheck="false" />
        </span>
    </header>
    <nav class="sheet-navigation" data-group="primary">
        <a class="item" data-tab="general">
            <span>{{localize "SR.General"}}</span>
        </a>
        <a class="item" data-tab="effects">
            <span>{{localize "SR.Effects"}}</span>
        </a>
    </nav>
     <section class="sheet-body">
        <section class="sheet-content">
            <div class="tab general" data-group="primary" data-tab="general">   
                <div class="metier-details">
                    <div class="spés">
                        <h3>
                            <label class="details-label" for="{{options.id}}-metier-spé1">{{localize "SRCreation.spé"}}</label>
                            <span><input name="system.spé" id="{{options.id}}-metier-spé1" type="text" value="{{system.spé}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="metier-resume">
                    <h3>
                        <label class="details-label" for="{{options.id}}-metier-resume">{{localize "SRCreation.resume"}}</label>
                        <textarea name="system.resume" id="{{options.id}}-metier-resume" type="text" value="{{system.resume}}" placeholder="{{system.resume}}" spellcheck="false">{{system.resume}}</textarea>
                    </h3>
                    </div>
                </div>
            </div>
            <div>
            {{~> "systems/shaanrenaissance/templates/items/partials/activeEffects.hbs"}}
        </section>
    </section>
</form>