<form class="item sheet crb-style race" autocomplete="off">
    {{!-- HEADER --}}
    <header class="sheet-header">
        <h2 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Nom du item" spellcheck="false" />
        </h2>
        <span class="item-source">
            <input name="system.source.value" type="text" value="{{system.source.value}}" placeholder="Source" spellcheck="false" />
        </span>
    </header>
    <nav class="sheet-navigation" data-group="primary">
        <a class="item" data-tab="general">
            <span>{{localize "SR.General"}}</span>
        </a>
        <a class="item" data-tab="effects">
            <span>{{localize "SR.Effects"}}</span>
        </a>
    </nav>

    <section class="sheet-body">
        <section class="sheet-content">
            <div class="tab general" data-group="primary" data-tab="general">
                <div class="race-details">
                    <div class="race-image">
                        <img src="{{item.img}}" data-edit="img">
                    </div>
                    <div class="race-domain">
                        <h3>
                            <label class="details-label" for="{{options.id}}-race-domain">{{localize "SRCreation.domain"}}</label>
                            <input name="system.domain" id="{{options.id}}-race-domain" type="text" value="{{system.domain}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="spés">
                        <h3>
                            <label class="details-label" for="{{options.id}}-race-spé1">{{localize "SRCreation.spé"}}</label>
                            <span><input name="system.spé1" id="{{options.id}}-race-spé1" type="text" value="{{system.spé1}}"spellcheck="false"/> - <input name="system.spé2" id="{{options.id}}-race-spé2" type="text" value="{{system.spé2}}"spellcheck="false"/></span>
                        </h3>
                    </div>
                    <div class="race-pouvoir">
                    <h3>
                        <label class="details-label" for="{{options.id}}-race-pouvoir">{{localize "SRCreation.pouvoir"}}</label> 
                        <input name="system.pouvoirNom" id="{{options.id}}-race-pouvoirNom" type="text" value="{{system.pouvoirNom}}"spellcheck="false"/>
                        <textarea name="system.pouvoir" id="{{options.id}}-race-pouvoir" type="text" value="{{system.pouvoir}}" placeholder="{{system.pouvoir}}" spellcheck="false">{{system.pouvoir}}</textarea>
                    </h3>
                    </div>
                    <h3 class="race-resume">
                        <label class="details-label" for="{{options.id}}-race-resume">{{localize "SRCreation.resume"}}</label>
                        <textarea name="system.resume" id="{{options.id}}-race-resume" type="text" placeholder="{{system.resume}}" spellcheck="false">{{system.resume}}</textarea>
                    </h3>
                    <div class="race-doctrine">
                        <h3>
                            <label class="details-label" for="{{options.id}}-race-doctrine">{{localize "SRCreation.doctrine"}}</label>
                            <textarea name="system.doctrine" id="{{options.id}}-race-doctrine" type="text" placeholder="{{system.doctrine}}" spellcheck="false">{{system.doctrine}}</textarea>
                        </h3>
                    </div>
                </div>
            </div>
            {{~> "systems/shaanrenaissance/templates/items/partials/activeEffects.hbs"}}
        </section>
    </section>
</form>