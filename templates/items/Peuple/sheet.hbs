<form class="item sheet crb-style peuple" autocomplete="off">
    {{!-- HEADER --}}
    <header class="sheet-header">
        <h2 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Nom du item" spellcheck="false" />
        </h2>
        <span class="item-source">
            <input name="system.source.value" type="text" value="{{system.source.value}}" placeholder="Source" spellcheck="false" />
        </span>
    </header>
    <nav class="sheet-navigation" data-group="primary">
        <a class="item" data-tab="general">
            <span>{{localize "SR.General"}}</span>
        </a>
        <a class="item" data-tab="effects">
            <span>{{localize "SR.Effects"}}</span>
        </a>
    </nav>
    <section class="sheet-body">
        <section class="sheet-content">
            <div class="tab general" data-group="primary" data-tab="general">
                <div class="infos">
                    <div class="peuple-image">
                        <img src="{{item.img}}" data-edit="img">
                    </div>
                    <div class="peuple-domain">
                        <h3>
                            <label class="details-label" for="{{options.id}}-peuple-domain">{{localize "SRCreation.domain"}}</label>
                            <input name="system.domain" id="{{options.id}}-peuple-domain" type="text" value="{{system.domain}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="spés">
                        <h3>
                            <label class="details-label" for="{{options.id}}-peuple-spé1">{{localize "SRCreation.spé"}}</label>
                            <span><input name="system.spé1" id="{{options.id}}-peuple-spé1" type="text" value="{{system.spé1}}"spellcheck="false"/> - <input name="system.spé2" id="{{options.id}}-peuple-spé2" type="text" value="{{system.spé2}}"spellcheck="false"/></span>
                        </h3>
                    </div>
                    <div class="peuple-paysage">
                        <h3>
                            <label class="details-label" for="{{options.id}}-peuple-paysage">{{localize "SRCreation.paysage"}}</label>
                            <textarea name="system.paysage" id="{{options.id}}-peuple-paysage" type="text" value="{{system.paysage}}" placeholder="{{system.paysage}}" spellcheck="false">{{system.paysage}}</textarea>
                        </h3>
                    </div>
                    <div class="peuple-resume">
                        <h3>
                            <label class="details-label" for="{{options.id}}-peuple-resume">{{localize "SRCreation.resume"}}</label>
                            <textarea name="system.resume" id="{{options.id}}-peuple-resume" type="text" value="{{system.resume}}" placeholder="{{system.resume}}" spellcheck="false">{{system.resume}}</textarea>
                        </h3>
                    </div>
                    <div class="peuple-moeurs">
                        <h3>
                            <label class="details-label" for="{{options.id}}-peuple-moeurs">{{localize "SRCreation.moeurs"}}</label>
                            <textarea name="system.moeurs" id="{{options.id}}-peuple-moeurs" type="text" value="{{system.moeurs}}" placeholder="{{system.moeurs}}" spellcheck="false">{{system.moeurs}}</textarea>
                        </h3>
                    </div>
                </div>
            </div>
            {{~> "systems/shaanrenaissance/templates/items/partials/activeEffects.hbs"}}
        </section>
    </section>
</form>