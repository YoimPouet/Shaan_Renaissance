<form class="item sheet crb-style relation" autocomplete="off">
    {{!-- HEADER --}}
    {{> "systems/shaanrenaissance/templates/items/partials/header.hbs"}}
    <nav class="sheet-navigation" data-group="primary">
        <a class="item" data-tab="general">
            <span>{{localize "SR.General"}}</span>
        </a>
        <a class="item" data-tab="effects">
            <span>{{localize "SR.Effects"}}</span>
        </a>
    </nav>
     <section class="sheet-body">
        <section class="sheet-content">
            <div class="tab general" data-group="primary" data-tab="general">
                <div class="relation-rank">
                    <p>
                        <i>
                            {{localize "SRLabels.acquis"}} {{localize "SR.de"}}
                            {{#if editable}}
                            <select name="system.acquis.caste">
                                {{selectOptions config.acquis.caste selected=system.acquis.caste localize=true}}
                            </select>
                            {{localize "SR.de"}}
                            {{else}}
                                <input class="locked-input-rank" name="system.acquis.caste" type="text" value="{{system.acquis.caste}}"/>
                            {{/if}}
                            <b>{{#if editable}}
                            <select name="system.class">
                                    {{selectOptions config.acquis.class selected=system.acquis.class localize=true}}
                            </select>
                            {{else}}
                                <input class="locked-input-rank" name="system.class" type="text" value="{{system.class}}"/>
                            {{/if}}</b>
                        </i>
                    </p>
                </div>
                <div class="relation-details">
                    <div class="relation-spécialisations">
                        <h3>
                            <label for="{{options.id}}-relation-spécialisations">{{localize "SR.spécialisations"}}</label>
                            <input name="system.acquis.spécialisations" id="{{options.id}}-relation-spécialisations" type="text" value="{{system.acquis.spécialisations}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="relation-déscription">
                        <label for="{{options.id}}-relation-Déscription">{{localize "SR.Déscription"}}</label>
                        <textarea name="system.description.value" resize="none" id="{{options.id}}-relation-Déscription" type="text" value="{{system.description.value}}" spellcheck="false">{{system.description.value}}</textarea>
                    </div>
                    <div class="relation-prestige">
                        <h3>
                            <label for="{{options.id}}-relation-prestige">{{localize "SR.prestige"}}</label>
                            <input name="system.acquis.prestige" id="{{options.id}}-relation-prestige" type="text" value="{{system.acquis.prestige}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="relation-fabrication">
                        <h3>
                            <label for="{{options.id}}-relation-fabrication">{{localize "SR.miseRelation"}}</label>
                            <input name="system.acquis.fabrication" id="{{options.id}}-relation-fabrication" type="text" value="{{system.acquis.fabrication}}"spellcheck="false"/>
                        </h3>
                    </div>
                </div>
            </div>
            {{~> "systems/shaanrenaissance/templates/items/partials/activeEffects.hbs"}}
        </section>
    </section>

</form>