<form class="item sheet crb-style armimale" autocomplete="off">
    {{!-- HEADER --}}
    {{> "systems/shaanrenaissance/templates/items/partials/header.hbs"}}
    <nav class="sheet-navigation" data-group="primary">
        <a class="item" data-tab="general">
            <span>{{localize "SR.General"}}</span>
        </a>
        <a class="item" data-tab="effects">
            <span>{{localize "SR.Effects"}}</span>
        </a>
    </nav>
    <section class="sheet-body">
        <section class="sheet-content">
            <div class="tab general" data-group="primary" data-tab="general">
                <div class="armimale-rank">
                    <p>
                        <i>
                            {{localize "SRLabels.acquis"}} {{localize "SR.de"}}
                            {{#if editable}}
                            <select name="system.acquis.caste">
                                {{selectOptions config.acquis.caste selected=system.acquis.caste localize=true}}
                            </select>
                            {{localize "SR.de"}}
                            {{else}}
                                <input class="locked-input-rank" name="system.acquis.caste" type="text" value="{{system.acquis.caste}}"/>
                            {{/if}}
                            <b>{{#if editable}}
                            <select name="system.class">
                                    {{selectOptions config.acquis.class selected=system.acquis.class localize=true}}
                            </select>
                            {{else}}
                                <input class="locked-input-rank" name="system.class" type="text" value="{{system.class}}"/>
                            {{/if}}</b>
                        </i>
                    </p>
                </div>
                <div class="armimale-details">
                    <div class="armimale-trihns">
                        <div class="trihn-Esprit">
                            <label for="{{options.id}}-armimale-trihn-Esprit">{{localize "SRLabels.Esprit"}}</label>
                            <input name="system.acquis.trihn.Esprit" id="{{options.id}}-armimale-trihn-Esprit" type="text" value="{{system.acquis.trihn.Esprit}}"spellcheck="false"/>
                        </div>
                        <div class="trihn-Ame">
                            <label for="{{options.id}}-armimale-trihn-Ame">{{localize "SRLabels.Ame"}}</label>
                            <input name="system.acquis.trihn.Ame" id="{{options.id}}-armimale-trihn-Ame" type="text" value="{{system.acquis.trihn.Ame}}"spellcheck="false"/>
                        </div>
                        <div class="trihn-Corps">
                            <label for="{{options.id}}-armimale-trihn-Corps">{{localize "SRLabels.Corps"}}</label>
                            <input name="system.acquis.trihn.Corps" id="{{options.id}}-armimale-trihn-Corps" type="text" value="{{system.acquis.trihn.Corps}}"spellcheck="false"/>
                        </div>
                    </div>
                    <div class="armimale-protéction">
                        <h3>
                            <label for="{{options.id}}-armimale-protéction">{{localize "SRLabels.protection"}}</label>
                            <input name="system.acquis.protéction" id="{{options.id}}-armimale-protéction" type="text" value="{{system.acquis.protéction}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-capacité">
                        <h3>
                            <label for="{{options.id}}-armimale-capacité">{{localize "SR.capacité"}}</label>
                            <input name="system.acquis.capacité" id="{{options.id}}-armimale-capacité" type="text" value="{{system.acquis.capacité}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-spécialisations">
                        <h3>
                            <label for="{{options.id}}-armimale-spécialisations">{{localize "SR.spécialisations"}}</label>
                            <input name="system.acquis.spécialisations" id="{{options.id}}-armimale-spécialisations" type="text" value="{{system.acquis.spécialisations}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-voie">
                        <label for="{{options.id}}-armimale-voie-select">{{localize "SRLabels.voie"}}</label><br>
                        <select class="select" name="system.acquis.voie" id="{{options.id}}-armimale-voie-select">
                            {{selectOptions config.acquis.voie selected=system.acquis.voie localize=true}}
                        </select>
                    </div>
                    <div class="armimale-places">
                        <h3>
                            <label for="{{options.id}}-armimale-places">{{localize "SRLabels.places"}}</label>
                            <input name="system.acquis.places" id="{{options.id}}-armimale-places" type="text" value="{{system.acquis.places}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-speed">
                        <h3>
                            <label for="{{options.id}}-armimale-speed">{{localize "SRLabels.speed"}}</label>
                            <input name="system.acquis.speed" id="{{options.id}}-armimale-speed" type="text" value="{{system.acquis.speed}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-distance">
                        <h3>
                            <label for="{{options.id}}-armimale-distance">{{localize "SRLabels.distance"}}</label>
                            <input name="system.acquis.distance" id="{{options.id}}-armimale-distance" type="text" value="{{system.acquis.distance}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-valeur">
                        <h3>
                            <label for="{{options.id}}-armimale-valeur">{{localize "SR.valeur"}}</label>
                            <input name="system.acquis.valeur" id="{{options.id}}-armimale-valeur" type="text" value="{{system.acquis.valeur}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-prestige">
                        <h3>
                            <label for="{{options.id}}-armimale-prestige">{{localize "SR.prestige"}}</label>
                            <input name="system.acquis.prestige" id="{{options.id}}-armimale-prestige" type="text" value="{{system.acquis.prestige}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-peuple">
                        <h3>
                            <label for="{{options.id}}-armimale-peuple">{{localize "SR.peupleorigine"}}</label>
                            <input name="system.acquis.peuple" id="{{options.id}}-armimale-peuple" type="text" value="{{system.acquis.peuple}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-déscription">
                        <label for="{{options.id}}-armimale-Déscription">{{localize "SR.Déscription"}}</label>
                        <textarea name="system.description.value" resize="none" id="{{options.id}}-armimale-Déscription" type="text" value="{{system.description.value}}" spellcheck="false">{{system.description.value}}</textarea>
                    </div>
                    <div class="armimale-entretien">
                        <h3>
                            <label for="{{options.id}}-armimale-entretien">{{localize "SR.entretien"}}</label>
                            <input name="system.acquis.entretien" id="{{options.id}}-armimale-entretien" type="text" value="{{system.acquis.entretien}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-instinct">
                        <h3>
                            <label for="{{options.id}}-armimale-instinct">{{localize "SR.instinct"}}</label>
                            <input name="system.acquis.instinct" id="{{options.id}}-armimale-instinct" type="text" value="{{system.acquis.instinct}}"spellcheck="false"/>
                        </h3>
                    </div>
                    <div class="armimale-dressage">
                        <h3>
                            <label for="{{options.id}}-armimale-dressage">{{localize "SR.dressage"}}</label>
                            <input name="system.acquis.fabrication" id="{{options.id}}-armimale-dressage" type="text" value="{{system.acquis.fabrication}}"spellcheck="false"/>
                        </h3>
                    </div>
                </div>
            </div>
            {{~> "systems/shaanrenaissance/templates/items/partials/activeEffects.hbs"}}
        </section>
    </section>
</form>