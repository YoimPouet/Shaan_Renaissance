                <span style="margin-left: 5px">(-1 {{localize choix.choix5.flavor.puiser1}} & -1 {{localize choix.choix5.flavor.puiser2}})</span>
            </label>
        </div>
        {{/if}}
    </fieldset>
    <input id="domain" type="hidden" name="domain" value="{{domain}}">
    <input type="hidden" id="domain" name="bonus" value="{{choix.bonus}}">
</form>